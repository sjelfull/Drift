{% if trackingCode %}
    {{ trackingCode | raw }}

    {% if currentUser %}
        <script>
            drift.identify('{{ currentUser.id }}',{ email:'{{ currentUser.email }}', name: '{{ currentUser.getFullName() }}' });
        </script>
    {% endif %}
{% endif %}